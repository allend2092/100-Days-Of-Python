# Day 5 project2

# for loop practice



# Press the green button in the gutter to run the script.
if __name__ == '__main__':
    # calculate students height when fed a list of student heights

    student_heights = [180, 124, 165, 173, 189, 169, 146]
    aggregate_height = 0

    for height in student_heights:
        print(f'height is: {height}')
        aggregate_height = aggregate_height + height

    average_height = aggregate_height / len(student_heights)

    print(f'Aggregate height is: {aggregate_height}')
    print(f'Number of student heights is: {len(student_heights)}')
    print(f'Average student height is: {average_height}')
    print(f'Average student height is: {round(average_height)}')



